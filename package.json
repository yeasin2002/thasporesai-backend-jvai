{
  "name": "providus_org",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "dev": "tsx watch src/app.ts",
    "dev:b": "bun --hot src/app.ts",
    "start": "node dist/app.js",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/app.ts --outfile server",
    "prepare": "husky",
    "check": "oxlint",
    "ruler:apply": "pnpm dlx @intellectronica/ruler@latest apply --local-only",
    "generate:module": "node script/generate-module.js",
    "format": "biome format --write ./src"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@scalar/express-api-reference": "^0.8.22",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/nodemailer": "^7.0.2",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.6.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.12.0",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.9",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.13.11",
    "@types/swagger-ui-express": "^4.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.12.0",
    "tsdown": "^0.15.1",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "oxlint"
  },
  "packageManager": "bun@1.0.0"
}
