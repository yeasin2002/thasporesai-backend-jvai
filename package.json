{
  "name": "job-sphere",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "dev": "tsx watch src/app.ts",
    "dev:b": "bun --hot src/app.ts",
    "start": "node dist/app.js",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/app.ts --outfile server",
    "prepare": "husky",
    "check": "oxlint",
    "ruler:apply": "pnpm dlx @intellectronica/ruler@latest apply --local-only",
    "generate:module": "node script/generate-module.js",
    "format": "biome format --write ./src"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@scalar/express-api-reference": "^0.8.22",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/nodemailer": "^7.0.2",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.6.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-serve-static-core": "^0.1.1",
    "firebase-admin": "^13.5.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "openapi3-ts": "^4.5.0",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.18.12",
    "@types/swagger-ui-express": "^4.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "oxlint": "^1.24.0",
    "tsdown": "^0.15.9",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "oxlint"
  },
  "packageManager": "pnpm@10.18.3"
}
