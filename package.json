{
  "name": "providus_org",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "dev": "tsx watch src/index.ts",
    "dev:b": "bun --hot src/index.ts",
    "start": "node dist/index.js",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "prepare": "husky",
    "check": "oxlint",
    "ruler:apply": "pnpm dlx @intellectronica/ruler@latest apply --local-only"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@scalar/express-api-reference": "^0.8.22",
    "@types/morgan": "^1.9.10",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.1",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.11",
    "@types/swagger-ui-express": "^4.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.12.0",
    "tsdown": "^0.15.1",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "oxlint"
  },
  "packageManager": "pnpm@10.13.1"
}
