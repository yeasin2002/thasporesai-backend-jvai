{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals", "node"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./*"]
    }
  },
  "include": ["tests/**/*.ts", "src/**/*.ts", "globals.d.ts"],
  "exclude": ["node_modules", "dist"]
}
