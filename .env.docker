# Docker Environment Configuration
# Copy this to .env and update with your values

# MongoDB Atlas (Cloud Database)
# Get your connection string from MongoDB Atlas dashboard
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/jobsphere?retryWrites=true&w=majority

# Application
PORT=4000
API_BASE_URL=http://localhost:4000
CORS_ORIGIN=*

# JWT Secrets (IMPORTANT: Change in production!)
ACCESS_SECRET=your-super-secret-access-key-min-32-characters-long
REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters-long

# Email (Gmail SMTP)
# Enable 2FA and create App Password: https://support.google.com/accounts/answer/185833
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-character-app-password

# Firebase (Optional - for push notifications)
# Place firebase-service-account.json in project root

# Monitoring (Optional - Grafana & Loki)
# Set to 'true' to enable monitoring stack
ENABLE_MONITORING=false
GRAFANA_PORT=8000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:8000


